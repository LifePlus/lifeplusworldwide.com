---
import Container from './Container.vue'
import CityTime from './CityTime.vue'
import ShareIcon from './icons/ShareIcon.vue'
import ArrowUpIcon from './icons/ArrowUpIcon.vue'
---

<footer class="bg-brand-base">
  <Container>
    <div class="flex justify-between">
      <div class="text-sm pt-6 pb-10 pr-4 flex flex-col justify-between">
        <div>
          <p class="mb-2">LifePlus is a trading name of LDi &copy; 2022 All rights reserved.</p>
          <div class="space-y-2 md:space-y-0 md:flex md:space-x-4 font-medium">
            <div><a href="/privacy">Privacy</a></div>
            <div><a href="/cookies">Cookies</a></div>
          </div>
        </div>
        <div class="md:hidden">
          <img src="/assets/globe.png" alt="A globe shaped like an apple with a bite" />
        </div>
      </div>
      <div class="flex relative">
        <div class="hidden md:flex pt-6 pb-10 pr-8 items-start">
          <img src="/assets/globe.png" alt="A globe shaped like an apple with a bite" />
        </div>
        <div class="flex border-x border-gray-500 divide-x divide-gray-500">
          <div class="px-4 pt-6 pb-10 space-y-1">
            <CityTime>Atlanta</CityTime>
            <CityTime>Beijing</CityTime>
            <CityTime>Dubai</CityTime>
            <CityTime>Johan'burg</CityTime>

            <div class="pt-8 lg:hidden text-brand-primary text-sm font-medium text-center">
              <div class="mb-2">Share</div>
              <button class="w-16 h-16 mx-auto flex items-center justify-center rounded-full border border-brand-primary bg-brand-base hover:bg-brand-primary hover:text-brand-base transition">
                <ShareIcon class="w-6 h-6 fill-current" />
              </button>
            </div>
          </div>
          <div class="px-4 pt-6 pb-10 space-y-1">
            <CityTime>London</CityTime>
            <CityTime>Seattle</CityTime>
            <CityTime>Sydney</CityTime>
            <CityTime>Zurich</CityTime>

            <div class="pt-8 lg:hidden text-brand-primary text-sm font-medium text-center">
              <div class="mb-2">Top</div>
              <button class="w-16 h-16 mx-auto flex items-center justify-center rounded-full border border-brand-primary bg-brand-base hover:bg-brand-primary hover:text-brand-base transition">
                <ArrowUpIcon class="w-6 h-6 fill-current" />
              </button>
            </div>
          </div>
          <div class="hidden lg:block px-4 pt-6 pb-10 text-brand-primary text-sm font-medium text-center">
            <div class="mb-2">Share</div>
            <button class="w-16 h-16 mx-auto flex items-center justify-center rounded-full border border-brand-primary bg-brand-base hover:bg-brand-primary hover:text-brand-base transition">
              <ShareIcon class="w-6 h-6 fill-current" />
            </button>
          </div>
          <div class="hidden lg:block px-4 pt-6 pb-10 text-brand-primary text-sm font-medium text-center">
            <div class="mb-2">Top</div>
            <button class="w-16 h-16 mx-auto flex items-center justify-center rounded-full border border-brand-primary bg-brand-base hover:bg-brand-primary hover:text-brand-base transition">
              <ArrowUpIcon class="w-6 h-6 fill-current" />
            </button>
          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>