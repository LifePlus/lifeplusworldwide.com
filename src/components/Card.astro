---
import { slugBuilder } from '../datocms.mjs'
import ArrowRightIcon from './icons/ArrowRightIcon.vue'
import ArrowLeftIcon from './icons/ArrowLeftIcon.vue'
import Image from './Image.vue'
import Vacancies from './Vacancies.vue'
const { content, pad } = Astro.props
const sizes = {
  small: 'prose-sm',
  normal: 'prose lg:prose-lg',
  large: 'prose-xl lg:prose-2xl leading-7',
}
---

<div class="flex flex-col rounded shadow-lg relative bg-white overflow-hidden">
  {content.image &&
    <figure class="aspect-video relative">
      <Image client:load data={content.image.responsiveImage} />
    </figure>
  }
  <div class="py-5 px-5 relative flex-1">
    <div class="flex flex-col justify-between h-full">
      <div>
        {content.subtitle &&
          <div class={`${content.title ? 'border-t' : 'border-y'} border-gray-300 py-1.5 text-3xl md:text-4xl`}>
            {content.subtitle}
          </div>
        }
        {content.title &&
          <div class="font-bold border-y border-gray-300 pt-1.5 pb-5 text-3xl md:text-4xl">
            {content.title}
          </div>
        }
        {content.content && <div set:html={content.content} class={`mt-5 prose pb-8 font-serif ${sizes[content.contentSize] || sizes.large} ${pad ? 'pe-16' : ''}`}></div>}
        {content.vacancyId && <Vacancies client:idle id={content.vacancyId} />}
      </div>

      {content.illustration &&
        <div class="absolute z-0 bottom-0 ltr:right-0 rtl:left-0 rtl:-scale-x-100 py-5 px-5 flex justify-end">
          <div class="w-72">
            <Image client:load data={content.illustration.responsiveImage} />
          </div>
        </div>
      }

      {content.readMoreLink &&
        <div class="text-right">
          <a href={slugBuilder(content.readMoreLink.slug)} class="group inline-flex items-center text-sm font-medium text-brand-primary">
            <span>Learn more...</span>

            <div class="w-8 h-8 flex items-center justify-center rounded-full bg-brand-primary text-white transition-transform ms-2 group-hover:translate-x-2 rtl:group-hover:-translate-x-2 duration-200">
              <ArrowRightIcon class="w-4 h-4 rtl:hidden" />
              <ArrowLeftIcon class="w-4 h-4 hidden rtl:block" />
            </div>
          </a>
        </div>
      }
    </div>
  </div>
</div>
