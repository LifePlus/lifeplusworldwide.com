---
import Container from '../Container.vue'
import ExternalLinkIcon from '../icons/ExternalLinkIcon.vue'
import BlockTitle from '../BlockTitle.astro'
const { content } = Astro.props
const textSize = {
  small: 'text-lg lg:text-xl',
  normal: 'text-xl lg:text-2xl',
  large: 'text-2xl lg:text-4xl lg:leading-[48px] text-brand-base',
}
// w-1/2
// mb-4
---

<style>
.centered-content img {
  margin-bottom: theme('spacing.4');
}
</style>

<div class="py-12">
  <Container>
    <BlockTitle content={content} />
    <div class="max-w-[34rem] mx-auto py-12 lg:py-20">
      <div set:html={content.content} class={`${textSize[content.contentTextSize]} centered-content mb-12`}></div>
      {content.callToAction &&
        <a target="_blank" href={content.actionUrl} class={`group inline-flex items-center text-2xl lg:text-4xl font-bold`}>
          <span>{content.callToAction}</span>
          <div class="flex-1 h-12 w-12 lg:w-16 lg:h-16 ms-4 lg:ms-8 flex items-center justify-center rounded-full bg-white text-brand-primary transition-transform group-hover:scale-110 duration-200">
            <ExternalLinkIcon class="w-5 h-5 fill-current rtl:-scale-x-100" />
          </div>
        </a>
      }
    </div>
  </Container>
</div>