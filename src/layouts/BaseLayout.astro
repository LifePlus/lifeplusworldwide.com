---
import '../styles/global.css'
---

<html lang="en" class="bg-brand-base scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <slot name="head" />
  <script>
    window.lifePlusScroll = function (top) {
      window.scroll({
        behavior: 'smooth',
        left: 0,
        top: top
      });
    }
  </script>
</head>
<body>
  <slot />

  <script>
    const scrollButton = document.getElementById('scroll-button')

    if (scrollButton) {
      document.getElementById('scroll-button').addEventListener('click', function () {
        const offset = parseFloat(document.getElementById('top-nav').getAttribute('data-offset'))
        window.lifePlusScroll(document.getElementById('section-2').offsetTop + offset)
      })
    }

    document.querySelectorAll('.scroll-top').forEach((element) => {
      element.addEventListener('click', function () {
        window.lifePlusScroll(0)
      })
    })
  </script>
</body>
</html>
